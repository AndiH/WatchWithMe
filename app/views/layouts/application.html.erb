<!DOCTYPE html>
<html>
<head>
  <title>WatchWithMe</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<!-- <%= debug params %>
	<%= debug @user %> -->
	<% if flash[:notice] %>
		<p class="notice"><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:error] %>
		<p class="error"><%= flash[:error] %></p>
	<% end %>
	
	<header>
		<nav>
			<% if user_signed_in? %>
				You are signed in as <%= link_to current_user.username, current_user %> | 
				<%= link_to "My reservations", user_reservations_path(current_user) %> |
				<%= link_to "Sign out", destroy_user_session_path %>
			<% else %>
				You are not signed in | <%= link_to 'Sign in', new_user_session_path %> | <%= link_to "Sign up a new account", new_user_registration_path %>
			<% end %>
		</nav>
	</header>
	<div id="container">
		<%= yield %>
	</div>
	<footer>
		This is where the foot stands.
	</footer>
</body>
</html>